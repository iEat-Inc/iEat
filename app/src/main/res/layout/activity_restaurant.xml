<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">

    <ImageView
        android:id="@+id/background_triangle6"
        android:layout_width="677dp"
        android:layout_height="672dp"
        android:layout_marginTop="-230dp"
        android:layout_marginEnd="-300dp"
        android:rotation="65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/triangle" />

    <ImageView
        android:id="@+id/restaurants_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/restaurant_header"
        app:srcCompat="@drawable/ic_left_arrow" />

    <TextView
        android:id="@+id/restaurant_header"
        android:layout_width="235dp"
        android:layout_height="86dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/fredokaone"
        android:text="{Restaurant name}"
        android:textAlignment="textEnd"
        android:textColor="@color/secondary_green"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/restaurant_storage_list_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/robotoflex"
                android:text="Storages:"
                android:textColor="@color/primary_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/restaurant_storages_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_storage_list_header"
                app:layout_constraintStart_toStartOf="@+id/restaurant_storage_list_header"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_storage_list_header" />

            <Button
                android:id="@+id/restaurant_add_storage_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_plus"
                app:iconPadding="0dp"
                app:iconSize="60dp"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_storage_list_header"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/restaurant_storage_list_header"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_storages_list" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoflex"
                android:text="Add storage"
                android:textAlignment="center"
                android:textColor="@color/secondary_green"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_add_storage_button"
                app:layout_constraintStart_toStartOf="@+id/restaurant_add_storage_button"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_add_storage_button" />

            <TextView
                android:id="@+id/restaurant_employee_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/robotoflex"
                android:text="Employees:"
                android:textColor="@color/primary_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_storage_list_header"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/restaurant_storage_list_header"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/restaurant_employees_list"
                android:layout_width="0dp"
                android:layout_height="139dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_employee_header"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/restaurant_employee_header"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_employee_header" />

            <Button
                android:id="@+id/restaurant_add_employee_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_plus"
                app:iconPadding="0dp"
                app:iconSize="60dp"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_employee_header"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/restaurant_employee_header"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_employees_list" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoflex"
                android:text="Add employee"
                android:textColor="@color/secondary_green"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/restaurant_add_employee_button"
                app:layout_constraintStart_toStartOf="@+id/restaurant_add_employee_button"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_add_employee_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>